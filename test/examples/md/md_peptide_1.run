#!/bin/sh

# first we set some variables
NAME=`whoami`
PROGRAM=../../../BUILD/bin/md
SIMULDIR=/home/eng/essmpc/GROMOS/TESTS/peptide/md

# create temporary directory
WORKDIR=${SIMULDIR}
mkdir -p ${WORKDIR}
cd       ${WORKDIR}

# set the input files
TOPO=${SIMULDIR}/peptide_2Cl_54a7.top
IUNIT=${SIMULDIR}/md_peptide_1.imd
INPUTCRD=${SIMULDIR}/eq_peptide_5.cnf

#set the output files
OUNIT=md_peptide_1.omd
OUTPUTCRD=md_peptide_1.cnf
OUTPUTTRX=md_peptide_1.trc
OUTPUTTRE=md_peptide_1.tre


MDOK=1

${PROGRAM} \
	@topo        ${TOPO} \
	@conf        ${INPUTCRD} \
	@input       ${IUNIT} \
	@fin         ${OUTPUTCRD} \
	@trc         ${OUTPUTTRX} \
	@tre         ${OUTPUTTRE}\
	>            ${OUNIT}
grep "finished successfully" ${OUNIT} > /dev/null || MDOK=0

uname -a >> ${OUNIT}

# compress some files
#gzip ${OUTPUTTRX}
#gzip ${OUTPUTTRE}

# copy the files back
OK=1
cp ${OUNIT}               ${SIMULDIR} || OK=0
cp ${OUTPUTCRD}           ${SIMULDIR} || OK=0
cp ${OUTPUTTRX}           ${SIMULDIR} || OK=0
cp ${OUTPUTTRE}           ${SIMULDIR} || OK=0

# clean up after successful run
if `test ${OK} -eq 0`; then
  uname -a > mess;
  echo 'cp failed for md_peptide, run 1' >> mess;
  Mail -s "ERROR" ${NAME} < mess;
  cd ${SIMULDIR};
else
  cd ${SIMULDIR};
#  rm ${WORKDIR}/*;
#  rmdir ${WORKDIR};
fi

# stop if MD was not succesfull
if `test ${MDOK} -eq 0`; then
  exit
fi

# perform last command (usually submit next job)
cd ${SIMULDIR}
./md_peptide_2.run 
